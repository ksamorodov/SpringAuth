pipeline {
    agent any

    tools {
        maven 'local_maven'
    }


    environment {
        server='tmc.gramant.ru'
        rpmName='tmc-backend-staging'
        rpmArchivePath="${WORKSPACE}/tmc/backend/target/${rpmName}-0.0.1-${BUILD_NUMBER}.noarch.rpm"
        yumRepo='/srv/repos/apps'
        yumKeep=3
    }

    stages {
        stage('Build') {
            steps {
                dir("tmc/backend") {
                    sh "mvn -B -DskipTests clean package -Dbuild.number=${BUILD_NUMBER} -Dpackage.name=tmc-backend-staging"
                }
            }
        }
        stage('Test') {
            steps {
                dir("tmc/backend") {
                    sh 'mvn test'
                }
            }
        }
        stage('Deliver') {
            steps {
                dir("tmc/backend") {
                    sh '''
                        scp "$rpmArchivePath" "$yumRepo"
                        rm -f `repomanage --keep=${yumKeep} --old ${yumRepo}`
                        createrepo -q "${yumRepo}";
                        ssh root@${server} sudo yum clean all
                        ssh root@${server} sudo yum -y install $rpmName
                    '''
                }
            }
        }
    }
}